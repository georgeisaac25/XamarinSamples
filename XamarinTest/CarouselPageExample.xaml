<?xml version="1.0" encoding="UTF-8" ?>
<CarouselPage
    x:Class="XamarinTest.CarouselPageExample"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage>
        <StackLayout>
            <Label Margin="5" Text="This is a CarouselPage, you can swipe left and right to browse through additional pages." />
            <Label
                Margin="5"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Text="Red" />
            <BoxView VerticalOptions="FillAndExpand" Color="Red" />
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label
                Margin="5"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Text="Green" />
            <BoxView VerticalOptions="FillAndExpand" Color="Green" />
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label
                Margin="5"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Text="Blue" />
            <BoxView VerticalOptions="FillAndExpand" Color="Blue" />
        </StackLayout>
    </ContentPage>
</CarouselPage>
